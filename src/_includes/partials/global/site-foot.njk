<footer role="contentinfo" class="c-site-foot{{ ' c-site-foot--compact' if page.url === '/' }}">
  <div class="o-wrapper">
    <div class="c-site-foot__inner">
      {% if page.url != '/' %}
      <article class="c-site-foot__details">
        <h4>{{ site.name }}</h4>
        <p>{{ site.shortDesc }}</p>
      </article>
      <hr class="o-hr o-hr--three-stars">
      {% endif %}

      {% include "partials/global/small-print.njk" %}

      {% if site.showThemeCredit %}
      <p class="site-foot__credit">
        <small>Powered by the <a href="https://virga.frontendweekly.tokyo">Virga</a>. Made Proudly in Tokyo.</small>
      </p>
      {% endif %}
    </div>
  </div>
</footer>
