{% if postListItems.length %}
<section class="c-post-list h-feed">
  <div class="o-wrapper">
    {% if postListHeading %}
    <h2 class="c-post-list__heading p-name">{{ postListHeading }}</h2>
    {% endif %}
    <ol class="c-post-list__items" reversed>
      {% for item in postListItems %}
        {% if item.date.getTime() <= global.now %}
          <li class="c-post-list__item">
            <article {{ 'lang=ja' if item.data.lang == 'ja' }}>
              <h3>
                <a href="{{ item.url }}" class="c-post-list__link u-url"
                   rel="bookmark">{{ item.data.quote | truncate(120) | safe }}</a>
              </h3>
              <footer class="c-post-list__meta">
                {% if item.data.tags %}
                  <span class="c-post-list__byline p-author h-card">By {{ item.data.tags | tagsToSentence | safe }}</span>
                {% endif %}
                {% if item.date %}
                  <span class="c-post-list__recorded-at">Recorded at
                     <time datetime="{{ item.date | dateIsoFilter }}" class="c-post-list__date dt-published">{{ item.date | dateOrdinalSuffixFilter }}</time>
                  </span>
                {% endif %}
              </footer>
            </article>
          </li>
        {% endif %}
      {% endfor %}
    </ol>
  </div>
</section>
{% endif %}
