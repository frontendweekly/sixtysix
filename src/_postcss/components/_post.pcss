.c-post {
  & .c-blockquote {
    margin-top: calc((var(--type-base-line-height) / var(--type-base-font-size)) * 2em);
  }

  /* List */
  & ul,
  & ol,
  & dd {
    --type-local-font-size-in-px: 40;

    padding-left: calc(
      (var(--type-local-font-size-in-px) / var(--type-base-font-size)) * 1em
    );
  }

  /* Table */
  & table {
    width: 100%;
    overflow-x: auto;
    border-collapse: collapse;
  }

  & th {
    font-weight: 700;
    text-align: left;
    text-transform: uppercase;
    border-style: solid;
    border-width: 1px 0;
    border-top-color: var(--color-gray-400);
    border-bottom-color: var(--color-gray-400);
  }

  /* Figure & Video */
  & figure,
  & video {
    position: relative;
    width: 100%;
    max-width: calc(var(--space-char-per-line) * 1ch);
  }

  /*  Figure & Image */
  & img {
    margin-right: auto;
    margin-left: auto;
  }

  & figure img {
    position: relative;
    z-index: 1;
  }

  & figcaption {
    margin: 0.5rem auto 0 auto;
    font-size: 0.9em;
    font-style: italic;
    text-align: center;
  }

  /* Code */
  & pre,
  & code,
  & kbd,
  & samp {
    /* stylelint-disable font-family-no-duplicate-names */
    font-family: Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace, monospace;
    font-size: 0.9em;
  }

  & pre {
    display: block;
    width: 100%;
    padding: 1rem;
    overflow-x: auto;
    text-align: left;
    word-break: normal;
    word-wrap: normal;
    white-space: pre-wrap;
    background-color: var(--color-gray-900);
    border-radius: 2px;
    word-spacing: normal;
  }

  /* Inline Code */
  & code:not([class]),
  & kbd:not([class]),
  & samp:not([class]) {
    padding: 1px 2px;
    background-color: var(--color-gray-200);
  }
}

.c-post[lang='ja'] {
  & .c-intro {
    font-family: var(--type-face-sans);
    font-style: normal;
  }

  .c-blockquote {
    font-family: var(--type-face-sans);
    font-size: 0.85em;
  }

  & blockquote {
    font-style: normal;
  }
}

.c-heading-permalink {
  margin-left: var(--space-base);
  font-size: 0.8em;
  color: var(--color-gray-700);
  vertical-align: middle;
}

.c-post__footer h3 {
  margin-top: 0;
}
